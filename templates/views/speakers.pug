extends ../layouts/default

block intro
	section.hero.is-secondary
		.hero-body
			.container
				#particles-js
				h1.title Speakers
				h2.subtitle Accepted sessions for 2019
				p All speakers and sessions are subject to change

block content

	section#keynote.section
		.container.has-text-centered
			h1.title Keynote Speakers
				.columns.is-variable.is-8.is-multiline.is-centered(style="margin-top:2rem;")
					.column.is-4
						.card
							.card-image
								figure.image.is-3by4
									img(src="/images/speakers/2019-keynote/Scott_Hunter-3x4.jpg" alt="Keynote Speaker Photo")
							.card-content
								.media-content
									p.title.is-4 Scott Hunter
									p.subtitle.is-6 Director of Program Management, Microsoft

					.column.is-4
						.card
							.card-image
								figure.image.is-3by4
									img(src="/images/speakers/2019-keynote/Ivana-3x4.jpg" alt="Keynote Speaker Photo")
							.card-content
								.media-content
									p.title.is-4 Ivana Cojbasic
									p.subtitle.is-6 SVP of Information Security, Regions Bank

	section.section.main
		.container
			.columns.is-multiline
				.column.is-narrow.is-full
					//-a.button.is-large.is-fullwidth.is-primary(href="https://lrtf2019.eventbrite.com/?aff=lrtechfestcom" target="_blank") Buy Tickets
				if data.speakers.length
					each speaker in data.speakers
						.column.is-narrow.is-full
							.box
								.columns
									.column.is-3.has-text-centered
										figure.image.is-128x128.has-image-centered.m-b-16
											img(src=speaker.profilePicture alt="Speaker Photo")
										p.title.is-4  #{speaker.firstName} #{speaker.lastName}
										p.subtitle #{speaker.tagLine}

										each link in speaker.links
											span.icon.is-medium
												a(href=link.url target="_blank")
													if link.title == 'Company Website'
														i.fas.fa-globe.fa-lg
													if link.title == 'Blog'
														i.fas.fa-blog.fa-lg
													if link.title == 'github'
														i.fab.fa-github.fa-lg
													if link.title == 'Twitter'
														i.fab.fa-twitter.fa-lg
													if link.title == 'LinkedIn'
														i.fab.fa-linkedin.fa-lg
													if link.title == 'Personal'
														i.fas.fa-user.fa-lg

									.column
										.card
											.card-content
												.content
													p #{speaker.bio}
											footer.card-footer
												each session in speaker.sessions
													p.card-footer-item
														span
															a(href="/sessions/"+session.id)
																span.icon.is-medium #[i.far.fa-lightbulb]
																span #[b #{session.name}]

block js