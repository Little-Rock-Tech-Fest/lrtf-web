extends ../layouts/default

block intro
	section.hero.is-secondary
		.hero-body
			.container
				#particles-js
				h1.title Looking for a job?
				h2.subtitle Check out these opportunties available at companies that sponsor Little Rock Tech Fest!

block content
	section.section.main
		.container
			.columns
				.column.is-9
					if data.jobs.length
						each job in data.jobs
							a(href='/jobs/' + job.slug)
								.columns.job.is-12
									.column.is-3
										img(src=job.sponsor.logo.secure_url).img.pull-right
									.column.is-6
										p.title #{job.name}
										p.subtitle.has-text-primary #{job.sponsor.name}
									.column.is-3.p-t-16
										p #{job.type}
										p #{job.location}
					else 
						.columns
							.column
								h3.subtitle There are no jobs posted at the moment!

				.column.is-3
					h4.title Want your job listed here?
					h6.subtitle.p-t-8 All sponsors can post jobs.
					.button.is-primary.is-fullwidth POST A JOB!